{
  "Version": "2012-10-17",
  "Id": "org_wide_kms_policy",
  "Statement": [
    {
      "Sid": "EnableRootAccessAndPreventPermissionDelegation",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::069137988389:root"
      },
      "Action": "kms:*",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:PrincipalType": "Account"
        }
      }
    },
    {
      "Sid": "Allow use of the KMS key for organization",
      "Principal": {
        "AWS": "*"
      },
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:DescribeKey",
        "kms:Encrypt",
        "kms:ReEncrypt*",
        "kms:GetKeyPolicy"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:PrincipalOrgID": "o-tmrcrnyq86"
        }
      }
    },
    {
      "Sid": "AllowSSMandCloudWatchLogsAccess",
      "Effect": "Allow",
      "Principal": {
        "Service": [
          "logs.amazonaws.com",
          "ssm.amazonaws.com"
        ]
      },
      "Action": [
        "kms:Encrypt*",
        "kms:Decrypt*",
        "kms:ReEncrypt*",
        "kms:GenerateDataKey*",
        "kms:Describe*"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:PrincipalOrgID": "o-tmrcrnyq86"
        }
      }
    }
  ]
}
