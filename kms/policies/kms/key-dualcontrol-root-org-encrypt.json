{
  "Version": "2012-10-17",
  "Id": "key-dualcontrol-root-org-encrypt",
  "Statement": [
    {
      "Sid": "EnableRootAccessAndPreventPermissionDelegation",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::111122223333:root"
      },
      "Action": "kms:*",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:PrincipalType": "Account"
        }
      }
    },
    {
      "Sid": "AllowUseOfTheKmsKeyForOrganization",
      "Principal": {
        "AWS": "*"
      },
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:DescribeKey",
        "kms:Encrypt",
        "kms:ReEncrypt*",
        "kms:GetKeyPolicy"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:PrincipalOrgID": "o-xxxxxxxxxxx"
        }
      }
    }
  ]
}
